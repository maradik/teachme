@model TeachMe.Areas.Teacher.Models.Home.IndexRecallViewModel[]

<h2><span class="glyphicon glyphicon-thumbs-up text-success"></span> Отзывы</h2>
<hr />
@foreach (var recall in Model)
{
    <div class="row" style="margin-top: 20px;">
        <div class="col-xs-3 text-center">
            <img style="width: 100%; height: 100%; max-height: 60px; max-width: 60px;" src="@recall.PhotoUrl" />
        </div>
        <div class="col-xs-9">
            <div>
                @recall.Text
            </div>
            <div style="margin-top: 5px;">
                <div class="visible-md visible-lg">
                    <div>
                        <span style="font-weight: bold">@recall.AuthorName</span>
                    </div>
                    <div>
                        <span class="label label-info">@recall.Subject</span>
                        <span class="label label-default">@recall.City</span>
                    </div>
                </div>
                <div class="hidden-md hidden-lg">
                    <span style="font-weight: bold">@recall.AuthorName</span>
                    <span class="label label-info">@recall.Subject</span>
                    <span class="label label-default">@recall.City</span>
                </div>
            </div>
        </div>
    </div>
}
