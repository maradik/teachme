@model TeachMe.Areas.Student.Models.Home.IndexViewModel

@{
    ViewBag.Title = "Заказать реферат, курсовую работу и решение задач онлайн недорого";
    ViewBag.MetaDescription = "У нас вы можете заказать реферат, курсовую работу любой сложности а также решение задач произвольной тематики. Работаем онлайн, быстро и недорого.";
    ViewBag.MetaKeywords = "реферат, решение задач, курсовая работа, курсовой проект, заказать, купить, на заказ, высшая математика, физика, электротехника, экономика, химия, онлайн, недорого, срочно, домашнее задание, контрольная работа";
}

<div class="jumbotron">
    @{
        Html.RenderPartial("_IndexJumbotron");
    }
</div>

@{
    Html.RenderPartial("_IndexInfoBlocks");
}

<div class="row">
    <div class="col-md-4">
        @{
            Html.RenderPartial("_IndexRecall", Model.Recalls);
        }
    </div>
    <div class="col-md-4">
        @{
            Html.RenderPartial("_IndexJobs", Model.Jobs);
        }
    </div>
    <div class="col-md-4">
        @{
            Html.RenderPartial("_Login", Model.LoginViewModel);
        }
    </div>
</div>

@if (Model.NeedShowPromoModal)
{
    <!-- Modal -->
    <div class="modal fade" id="promoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header alert alert-success">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Специальное предложение!</h4>
                </div>
                <div class="modal-body">
                    <p>Дарим <b class="text-success">@Model.GiftAmountForNewUser&nbsp;руб.</b> на лицевой счет!</p>
                    <p>Закажи решение любой задачи!</p>
                </div>
                <div class="modal-footer">
                    @Html.ActionLink("Попробовать!", "Register", "Account", new { area = "" }, new { @class = "btn btn-primary", @type = "button" })
                    <button type="button" class="btn btn-default" data-dismiss="modal">Спасибо, я подумаю</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            window.setTimeout(function () {
                $('#promoModal').modal({});
            }, 11000);

            $('#promoModal').on('hidden.bs.modal', function (e) {
                document.cookie = "promoModalHidden=true;path=/";
            });
        });
    </script>
}