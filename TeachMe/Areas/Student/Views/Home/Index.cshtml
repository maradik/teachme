@model TeachMe.Areas.Student.Models.Home.IndexViewModel

@{
    ViewBag.Title = "";
}

<div class="jumbotron">
    @{
        Html.RenderPartial("_IndexJumbotron");
    }
</div>

<div class="row">
    <div class="col-md-4">
        @{
            Html.RenderPartial("_IndexRecall", Model.Recalls);
        }
    </div>
    <div class="col-md-4">
        @{
            Html.RenderPartial("_IndexJobs", Model.Jobs);
        }
    </div>
    <div class="col-md-4">
        @{
            Html.RenderPartial("_Login", Model.LoginViewModel);
            if (Model.GiftAmountForNewUser != 0)
            {
                <div class="alert alert-success">
                    <span class="text-danger" style="font-weight: bold;">Акция!</span> При регистрации @Model.GiftAmountForNewUser&nbsp;руб. в подарок!
                </div>
            }
        }
    </div>
</div>