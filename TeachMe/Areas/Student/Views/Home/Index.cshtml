@model TeachMe.Areas.Student.Models.Home.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @{
        Html.RenderPartial("_IndexJumbotron");
    }
</div>

<div class="row">
    <div class="col-md-4">
        @{
            Html.RenderPartial("_IndexRecall", Model.Recalls);
        }
    </div>
    <div class="col-md-4">
        @{
            Html.RenderPartial("_IndexJobs", Model.Jobs);
        }
    </div>
    <div class="col-md-4">
        @{
            if (Request.IsAuthenticated)
            {
                Html.RenderPartial("_IndexUserInfo", Model.UserInfo);
            }
            else
            {
                Html.RenderPartial("_Login", Model.LoginViewModel);
            }
        }
    </div>
</div>