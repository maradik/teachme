@using TeachMe.Models
@using TeachMe.Models.Jobs
@model JobAttachment

<div style="margin: 10px 0 10px 0;" class="col-xs-4 col-sm-3 attachment">
    <div>
        @Html.HiddenFor(model => Model.FileName)
        @switch (Model.Type)
        {
            case JobAttachmentType.Image:
                <div>
                    <a href="~/Uploads/@Model.FileName?width=1280" class="gallery-item">
                        <img src="~/Uploads/@Model.FileName?width=200" title="@Model.OriginFileName" style="max-width: 100%;" />
                    </a>
                </div>
                break;
            default:
                <div>
                    @Html.ActionLink($"Скачать {Model.OriginFileName}", "DownloadAttachment", new { jobId = ViewBag.JobId, attachmentId = Model.Id }, new { title = $"Скачать {Model.OriginFileName}" })
                </div>
                break;
        }
    </div>
    <div class="text-center">
        <a href="#" data-action="removeAttachment">[Удалить]</a>
    </div>
</div>

